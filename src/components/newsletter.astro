---
import Button from "./ui/button.astro";
---
<div class="p-8 md:px-20 md:py-20 mt-20 mx-auto max-w-5xl  ">
  
  <form
    name="newsletter-subscription"
    method="POST"
    data-netlify="true"
    id="newsletterForm"
    class="needs-validation"
    novalidate
    netlify>
  
    <h2 class="font-bold text-3xl text-gray-800 mb-4">Subscribe to Our Newsletter</h2>
    <p class="text-lg leading-relaxed text-slate-500 mb-4">
      Stay updated with the latest news, tips, and exclusive offers. Join our community now!
    </p>
  
    <input type="hidden" name="form-name" value="newsletter-subscription" />
  
    <div class="mb-5">
      <label for="subscriber_name" class="sr-only">Full Name</label>
      <input
        id="subscriber_name"
        type="text"
        placeholder="Full Name"
        name="name"
        required
        class="w-full px-4 py-3 border-2 placeholder:text-gray-800 rounded-md outline-none focus:ring-4 border-gray-300 focus:border-gray-600 ring-gray-100"
      />
      <div class="empty-feedback invalid-feedback text-red-400 text-sm mt-1">
        Please provide your full name.
      </div>
    </div>
  
    <div class="mb-5">
      <label for="subscriber_email" class="sr-only">Email Address</label>
      <input
        id="subscriber_email"
        type="email"
        placeholder="Email Address"
        name="email"
        required
        class="w-full px-4 py-3 border-2 placeholder:text-gray-800 rounded-md outline-none focus:ring-4 border-gray-300 focus:border-gray-600 ring-gray-100"
      />
      <div class="empty-feedback text-red-400 text-sm mt-1">
        Please provide your email address.
      </div>
      <div class="invalid-feedback text-red-400 text-sm mt-1">
        Please provide a valid email address.
      </div>
    </div>
  
    <!-- Optional: Consent Checkbox -->
    <div class="mb-4">
      <input
        id="consent"
        type="checkbox"
        name="consent"
        required
        class="mr-2"
      />
      <label for="consent" class="text-sm leading-relaxed text-slate-500">
        I agree to receive marketing and promotional emails.
      </label>
      <div class="invalid-feedback text-red-400 text-sm mt-1">
        You must agree before submitting.
      </div>
    </div>
  
    <Button type="submit" size="lg" block>Subscribe</Button>
    <div id="result" class="mt-3 text-center"></div>
  </form>
</div>

<style>
  .invalid-feedback,
  .empty-feedback {
    display: none;
  }

  .was-validated :placeholder-shown:invalid ~ .empty-feedback {
    display: block;
  }

  .was-validated :not(:placeholder-shown):invalid ~ .invalid-feedback {
    display: block;
  }

  .is-invalid,
  .was-validated :invalid {
    border-color: #dc3545;
  }
</style>
