---
import Button from "./ui/button.astro";
---

<form
  name="contact"
  method="POST"
  data-netlify="true"
  id="form"
  class="needs-validation"
  novalidate
  action="/success">
  <input type="hidden" name="form-name" value="contact" />
  <div class="relative">
    <label for="email_address" class="sr-only">Email Address</label>
    <input
      id="email_address"
      type="email"
      placeholder="Enter your email"
      name="email"
      required
      class="w-full px-4 py-3 border-2 placeholder:text-gray-800 rounded-none outline-none focus:ring-4 border-gray-300 focus:border-gray-600 ring-gray-100 bg-gray-50"
    />
    <div class="invalid-feedback text-red-400 text-sm mt-1">
      Please provide a valid email address.
    </div>
    <div 
      id="submit-button" 
      class="h-0 opacity-0 scale-95 transition-all duration-300 ease-out pointer-events-none overflow-hidden">
      <Button type="submit" size="lg" class="w-full rounded-none">Get Started</Button>
    </div>
  </div>
</form>

<script>
  const emailInput = document.getElementById('email_address') as HTMLInputElement;
  const submitButton = document.getElementById('submit-button');

  emailInput?.addEventListener('input', () => {
    if (emailInput.value.length > 0) {
      submitButton?.classList.remove('opacity-0', 'scale-95', 'pointer-events-none', 'h-0');
      submitButton?.classList.add('opacity-100', 'scale-100', 'h-auto');
    } else {
      submitButton?.classList.add('opacity-0', 'scale-95', 'pointer-events-none', 'h-0');
      submitButton?.classList.remove('opacity-100', 'scale-100', 'h-auto');
    }
  });
</script>

<style>
  .invalid-feedback {
    display: none;
  }

  .was-validated :invalid ~ .invalid-feedback {
    display: block;
  }

  .is-invalid,
  .was-validated :invalid {
    border-color: #dc3545;
  }
</style>
